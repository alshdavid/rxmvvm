{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "lib": ["DOM", "ESNext"],
    "types": [],
    "paths": {
      "rxmvvm": ["../../lib/src/index.ts"],
      "rxmvvm/preact": ["../../lib/src/preact/index.ts"],
      "rxmvvm/react": ["../../lib/src/react/index.ts"],
      "rxmvvm/reactive": ["../../lib/src/reactive/index.ts"],
    }
  },
  "include": ["src", "test"],
}
